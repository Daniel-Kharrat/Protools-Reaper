slider1: 0<0,1,1{Mid (L) Side (R),Side (L) Mid (R)}>Select input

slider2:1.0<0,3,0.01>Mid
slider3:1.0<0,3,0.01>Sides
slider4:1.0<0,2,0.01>Output Gain

@slider
selection = slider1;
mid_gain   = slider2;
side_gain  = slider3;
output_gain = slider4;

@sample
// Input
selection == 1 ? (mid  = spl1; side = spl0) : (mid  = spl0; side = spl1);

// Output
spl0 = ((mid * mid_gain) + (side * side_gain)) * output_gain;
spl1 = ((mid * mid_gain) - (side * side_gain)) * output_gain;
